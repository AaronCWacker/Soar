# rules used for testing

sp {extract-cursor-c1-intersect
   (state <s> ^task-state t
              ^svs <svs>)
   (<svs> ^spatial-scene <scn>
          ^command <cmd>)
   (<scn> ^child.id cur ^child.id c1)
-->
   (<cmd> ^extract <e>)
   (<e> ^type intersect ^a <a> ^b <b>)
   (<a> ^type node ^name cur)
   (<b> ^type node ^name c1)}

